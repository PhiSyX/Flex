{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignoreUnknown": true
	},
	"linter": {
		"enabled": true,
		"ignore": [".vscode", "dist", "target", "public", "tests"],
		"rules": {
			"recommended": true,
			"a11y": {
				"recommended": true
			},
			"complexity": {
				"recommended": true,
				"useLiteralKeys": "off"
			},
			"style": {
				"recommended": true,
				"useConst": "off"
			},
			"suspicious": {
				"recommended": true,
				"noEmptyInterface": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"ignore": [".vscode", "dist", "target", "public", "tests"],
		"indentWidth": 4,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "always",
			"lineWidth": 80,
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "double"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"trailingCommas": "none"
		}
	}
}
